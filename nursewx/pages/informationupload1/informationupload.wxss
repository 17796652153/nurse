/* pages/bindingPhone/bindingPhone.wxss */
.subtitle {
   margin-left: 30rpx;
   margin-top: 30rpx;
}

.navBtm {
   width: 72rpx;
   height: 8rpx;
   background: #00a3ff;
   margin-top: 12rpx;
}

.bindingBox {
   display: flex;
   /* justify-content: center; */
   width: 100%;
   padding: 0rpx 4%;
   box-sizing: border-box;
   align-items: center;
}

.bindingBox2 {
   justify-content: space-between;
   margin-top: 20rpx;
}

.bindingBox text {
   font-size: 32rpx;
   color: #333;
   display: inline-block;
   width: 27%;
   text-align: left;
}

.closeimg {
   width: 40rpx;
   height: 40rpx;
   position: absolute;
   right: 0;
   top: 0;
}

.avatar {
   width: 72rpx;
   height: 72rpx;
   border-radius: 50%;
}

.bindingBox .bindingBoxInputView {
   width: 69%;
   border-bottom: 1rpx solid #e5e5e5;
}

.bindingBox input {
   height: 112rpx;
   color: #333;
}

.sendPhone {
   display: inline-block;
   width: 180rpx;
   height: 48rpx;
   background: #00a3ff;
   color: #FFF;
   font-size: 24rpx;
   text-align: center;
   line-height: 48rpx;
   border-radius: 24rpx;
}

.hide {
   display: none;
}

.myClick {
   width: 400rpx;
   height: 100rpx;
   display: block;
   margin: 160rpx auto 0rpx;
}

.btn {
   margin: 80rpx 50rpx 50rpx;
   height: 88rpx;
   opacity: 1;
   background: linear-gradient(103deg, #63b2ff, #bd00ff 100%);
   border-radius: 46rpx;
   line-height: 76rpx;
   color: #fff;
   text-align: center;
}

.flexac {
   position: fixed;
   bottom: 108rpx;
   margin: 0 30rpx;
   width: 690rpx;
   display: flex;
   justify-content: space-between;
   align-items: center;
}

.picker {
   height: 112rpx;
   line-height: 112rpx;
   color: #333;
}

.picker1 {
   color: #888;
}

.uploadimg {
   width: 330rpx;
   height: 200rpx;
   margin: 30rpx 0 0 30rpx;
}

.uploadimg1 {
   width: 690rpx;
   height: 360rpx;
   opacity: 1;
   margin: 30rpx 0 0 30rpx;
}