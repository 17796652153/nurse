/* pages/withdraw/withdraw.wxss */
.way {
  width: calc(100% - 60rpx);
  box-sizing: border-box;
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: CENTER;
  color: #333333;
  padding: 40rpx 0;
  margin: 0 30rpx;
  border-bottom: 2rpx solid #e5e5e5;
}

.way input{
  text-align: left;
}
.bname{
width: 170rpx;
text-align: left;
}
.waywx {
  width: 112rpx;
  height: 48rpx;
  line-height: 48rpx;
  opacity: 1;
  border: 2rpx solid #00a3ff;
  border-radius: 4rpx;
  font-size: 28rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: CENTER;
  color: #00a3ff;
  /* margin-left: 44rpx; */
}

.amount {
  width: calc(100% - 60rpx);
  box-sizing: border-box;
  border-bottom: 2rpx solid #e5e5e5;
  margin: 0 30rpx;
}

.amount .title {
  font-size: 32rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: LEFT;
  color: #000000;
  margin: 20rpx 0;
}

.amountmoney {
  font-size: 72rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  color: #000000;
  display: flex;
  align-items: center;
}
.inputbox{
  height: 72rpx;
}
.allamount-box {
  margin: 20rpx 30rpx 0;
  font-size: 32rpx;
  font-family: PingFang SC, PingFang SC-Regular;
  font-weight: 400;
  text-align: LEFT;
  color: #999999;
}

.allamount {
  color:#ff2424;
  margin-left: 50rpx;
}

.allamount1 {
  color:#ff2424;
  font-size: 28rpx;
}

.btn {
  width: 500rpx;
  height: 100rpx;
  opacity: 1;
  background: linear-gradient(116deg, #63b2ff, #bd00ff 100%);
  border-radius: 50rpx;
  line-height: 100rpx;
  font-size: 36rpx;
  font-family: PingFang SC, PingFang SC-Medium;
  color: #fff;
  text-align: center;
  margin: 100rpx 125rpx;
}