}
.btn {
  position: fixed;
  bottom: 60rpx;
  width: 630rpx;
  margin: 0 60rpx;
  height: 88rpx;
  opacity: 1;
  background: linear-gradient(98deg, #63b2ff, #bd00ff 100%);
  border-radius: 54rpx;
  line-height: 88rpx;
  text-align: center; 
  color: #fff;
}
.nodetail {
  width: 200rpx;
  height: 150rpx;
  margin-bottom: 30rpx;
}

.nodetailbox {
  font-size: 36rpx;
  font-family: PingFang SC, PingFang SC-Regular;
